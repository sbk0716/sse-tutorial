{
  "name": "sse-tutorial-monorepo",
  "version": "1.0.0",
  "description": "SSE Tutorial with Next.js frontend and Express backend",
  "scripts": {
    "start:frontend": "cd frontend && npm run dev",
    "start:backend": "cd backend && npm run dev",
    "dev": "concurrently \"npm run start:frontend\" \"npm run start:backend\""
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}